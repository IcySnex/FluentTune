<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="FluentTune.WinUI.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:FluentTune.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar
            x:Name="TitleBar"
            Title="FluentTune"
            Height="48"
            x:FieldModifier="public"
            IsBackButtonVisible="True"
            IsPaneToggleButtonVisible="True"
            Subtitle="Preview">
            <interactivity:Interaction.Behaviors>
                <interactivity:EventTriggerBehavior EventName="PaneToggleRequested">
                    <interactivity:ChangePropertyAction
                        PropertyName="IsPaneOpen"
                        TargetObject="{x:Bind vm}"
                        Value="{x:Bind vm.IsPaneOpen, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}" />
                </interactivity:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>

            <TitleBar.Resources>
                <SolidColorBrush x:Key="TitleBarBackButtonBackgroundDisabled" Color="Transparent" />
            </TitleBar.Resources>

            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/Icon.ico" />
            </TitleBar.IconSource>
        </TitleBar>

        <NavigationView
            x:Name="NavigationView"
            Grid.Row="1"
            x:FieldModifier="public"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="{x:Bind vm.IsPaneOpen, Mode=OneWay}"
            IsPaneToggleButtonVisible="False"
            OpenPaneLength="200">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Home"
                    Icon="Home"
                    Tag="home" />
            </NavigationView.MenuItems>

            <Frame x:Name="Frame" x:FieldModifier="public" />
        </NavigationView>
    </Grid>
</UserControl>
