<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentTune.WinUI.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentTune.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Style="{StaticResource PageTitleTextBlockStyle}" Text="Home" />

                <Button Command="{x:Bind vm.ChangeThemeCommand}" Content="Change Theme" />
                <Button Command="{x:Bind vm.ChangeBackdropCommand}" Content="Change Backdrop" />
            </StackPanel>

            <!--  Colors  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Colors" />
                <StackPanel Spacing="8">
                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentPrimary}"
                            ToolTipService.ToolTip="AccentPrimary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight1}"
                            ToolTipService.ToolTip="AccentLight1" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight2}"
                            ToolTipService.ToolTip="AccentLight2" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight3}"
                            ToolTipService.ToolTip="AccentLight3" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight4}"
                            ToolTipService.ToolTip="AccentLight4" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark1}"
                            ToolTipService.ToolTip="AccentDark1" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark2}"
                            ToolTipService.ToolTip="AccentDark2" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark3}"
                            ToolTipService.ToolTip="AccentDark3" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark4}"
                            ToolTipService.ToolTip="AccentDark4" />
                    </StackPanel>

                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundWindow}"
                            ToolTipService.ToolTip="BackgroundWindow" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControl}"
                            ToolTipService.ToolTip="BackgroundControl" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControlLow}"
                            ToolTipService.ToolTip="BackgroundControlLow" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControlMedium}"
                            ToolTipService.ToolTip="BackgroundControlMedium" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControlHigh}"
                            ToolTipService.ToolTip="BackgroundControlHigh" />
                    </StackPanel>

                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControl}"
                            ToolTipService.ToolTip="StrokeControl" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControlLow}"
                            ToolTipService.ToolTip="StrokeControlLow" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControlMedium}"
                            ToolTipService.ToolTip="StrokeControlMedium" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControlHigh}"
                            ToolTipService.ToolTip="StrokeControlHigh" />
                    </StackPanel>

                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextPrimary}"
                            ToolTipService.ToolTip="TextPrimary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextSecondary}"
                            ToolTipService.ToolTip="TextSecondary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextTertiary}"
                            ToolTipService.ToolTip="TextTertiary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextQuaternary}"
                            ToolTipService.ToolTip="TextQuaternary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextOnAccentPrimary}"
                            ToolTipService.ToolTip="TextOnAccentPrimary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextOnAccentSecondary}"
                            ToolTipService.ToolTip="TextOnAccentSecondary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextOnAccentTertiary}"
                            ToolTipService.ToolTip="TextOnAccentTertiary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource TextOnAccentQuaternary}"
                            ToolTipService.ToolTip="TextOnAccentQuaternary" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>


            <!--  Buttons  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Buttons" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Standard" />
                    <Button Content="Standard (X)" IsEnabled="False" />
                    <Button Content="Accent" Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Content="Accent (X)"
                        IsEnabled="False"
                        Style="{StaticResource AccentButtonStyle}" />
                    <ToggleButton Content="Toggle Button" />
                    <ToggleButton Content="Toggle Button (X)" IsEnabled="False" />
                    <HyperlinkButton Content="Hyperlink Button" NavigateUri="https://example.com" />
                    <HyperlinkButton
                        Content="Hyperlink Button (X)"
                        IsEnabled="False"
                        NavigateUri="https://example.com" />
                </StackPanel>
            </StackPanel>


            <!--  Text Inputs  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Text Inputs" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Header="Standard TextBox"
                        PlaceholderText="Enter text..." />
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Header="Standard TextBox (X)"
                        IsEnabled="False"
                        PlaceholderText="Enter text..." />
                </StackPanel>
                <PasswordBox
                    Width="300"
                    HorizontalAlignment="Left"
                    Header="PasswordBox" />
                <AutoSuggestBox
                    Width="300"
                    HorizontalAlignment="Left"
                    Header="AutoSuggestBox"
                    PlaceholderText="Type here..." />
                <NumberBox
                    Width="150"
                    HorizontalAlignment="Left"
                    Header="NumberBox"
                    SpinButtonPlacementMode="Compact"
                    Value="42" />
                <RichEditBox
                    Width="300"
                    Height="120"
                    HorizontalAlignment="Left"
                    Header="RichEditBox" />
            </StackPanel>


            <!--  Sliders & Progress  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Sliders &amp; Progress" />
                <Slider
                    Width="300"
                    HorizontalAlignment="Left"
                    Maximum="100"
                    Minimum="0"
                    Value="60" />
                <ProgressBar
                    Width="300"
                    HorizontalAlignment="Left"
                    Maximum="100"
                    Minimum="0"
                    Value="40" />
                <ProgressRing
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Left"
                    IsActive="True" />
            </StackPanel>


            <!--  Checkboxes & Radios  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Checkboxes &amp; RadioButtons" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox Content="CheckBox 1" />
                    <CheckBox Content="CheckBox 2" IsChecked="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <RadioButton Content="Option A" />
                    <RadioButton Content="Option B" />
                    <RadioButton Content="Option C" IsChecked="True" />
                </StackPanel>
            </StackPanel>


            <!--  ComboBox & Menu  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="ComboBox &amp; Menu" />
                <ComboBox Width="250">
                    <ComboBoxItem Content="Item 1" />
                    <ComboBoxItem Content="Item 2" />
                    <ComboBoxItem Content="Item 3" />
                </ComboBox>
                <MenuBar>
                    <MenuBarItem Title="File">
                        <MenuFlyoutItem Text="New" />
                        <MenuFlyoutItem Text="Open" />
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Exit" />
                    </MenuBarItem>
                    <MenuBarItem Title="Edit">
                        <MenuFlyoutItem Text="Copy" />
                        <MenuFlyoutItem Text="Paste" />
                    </MenuBarItem>
                </MenuBar>
            </StackPanel>


            <!--  Toggle Switches  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Toggle Controls" />
                <ToggleSwitch Header="ToggleSwitch A" />
                <ToggleSwitch Header="ToggleSwitch B" IsOn="True" />
            </StackPanel>


            <!--  Lists  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Lists" />
                <ListView
                    Width="300"
                    Height="150"
                    HorizontalAlignment="Left">
                    <ListViewItem Content="List Item 1" />
                    <ListViewItem Content="List Item 2" />
                    <ListViewItem Content="List Item 3" />
                </ListView>
                <GridView
                    Width="300"
                    Height="150"
                    HorizontalAlignment="Left">
                    <GridViewItem Content="Grid Item A" />
                    <GridViewItem Content="Grid Item B" />
                    <GridViewItem Content="Grid Item C" />
                </GridView>
            </StackPanel>


            <!--  Misc Controls  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Misc Controls" />
                <CalendarDatePicker />
                <TimePicker />
                <ColorPicker HorizontalAlignment="Left" />
            </StackPanel>


        </StackPanel>
    </ScrollViewer>
</Page>
