<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentTune.WinUI.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentTune.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Style="{StaticResource PageTitleTextBlockStyle}" Text="Home" />

                <Button Command="{x:Bind vm.ChangeThemeCommand}" Content="Change Theme" />
                <Button Command="{x:Bind vm.ChangeBackdropCommand}" Content="Change Backdrop" />
            </StackPanel>

            <!--  Colors  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Colors" />
                <StackPanel Spacing="8">
                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentPrimary}"
                            ToolTipService.ToolTip="AccentPrimary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight1}"
                            ToolTipService.ToolTip="AccentLight1" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight2}"
                            ToolTipService.ToolTip="AccentLight2" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight3}"
                            ToolTipService.ToolTip="AccentLight3" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentLight4}"
                            ToolTipService.ToolTip="AccentLight4" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark1}"
                            ToolTipService.ToolTip="AccentDark1" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark2}"
                            ToolTipService.ToolTip="AccentDark2" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark3}"
                            ToolTipService.ToolTip="AccentDark3" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource AccentDark4}"
                            ToolTipService.ToolTip="AccentDark4" />
                    </StackPanel>

                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundWindow}"
                            ToolTipService.ToolTip="BackgroundWindow" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundPopup}"
                            ToolTipService.ToolTip="BackgroundPopup" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControl}"
                            ToolTipService.ToolTip="BackgroundControl" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControlLow}"
                            ToolTipService.ToolTip="BackgroundControlLow" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControlMedium}"
                            ToolTipService.ToolTip="BackgroundControlMedium" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundControlHigh}"
                            ToolTipService.ToolTip="BackgroundControlHigh" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundStatusNeutral}"
                            ToolTipService.ToolTip="BackgroundStatusNeutral" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundStatusSuccess}"
                            ToolTipService.ToolTip="BackgroundStatusSuccess" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundStatusCaution}"
                            ToolTipService.ToolTip="BackgroundStatusCaution" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource BackgroundStatusCritical}"
                            ToolTipService.ToolTip="BackgroundStatusCritical" />
                    </StackPanel>

                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokePopup}"
                            ToolTipService.ToolTip="StrokePopup" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControl}"
                            ToolTipService.ToolTip="StrokeControl" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControlLow}"
                            ToolTipService.ToolTip="StrokeControlLow" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControlMedium}"
                            ToolTipService.ToolTip="StrokeControlMedium" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource StrokeControlHigh}"
                            ToolTipService.ToolTip="StrokeControlHigh" />
                    </StackPanel>

                    <StackPanel
                        Height="20"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundPrimary}"
                            ToolTipService.ToolTip="ForegroundPrimary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundSecondary}"
                            ToolTipService.ToolTip="ForegroundSecondary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundTertiary}"
                            ToolTipService.ToolTip="ForegroundTertiary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundQuaternary}"
                            ToolTipService.ToolTip="ForegroundQuaternary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundOnAccentPrimary}"
                            ToolTipService.ToolTip="ForegroundOnAccentPrimary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundOnAccentSecondary}"
                            ToolTipService.ToolTip="ForegroundOnAccentSecondary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundOnAccentTertiary}"
                            ToolTipService.ToolTip="ForegroundOnAccentTertiary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundOnAccentQuaternary}"
                            ToolTipService.ToolTip="ForegroundOnAccentQuaternary" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundStatusNeutral}"
                            ToolTipService.ToolTip="ForegroundStatusNeutral" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundStatusSuccess}"
                            ToolTipService.ToolTip="ForegroundStatusSuccess" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundStatusCaution}"
                            ToolTipService.ToolTip="ForegroundStatusCaution" />
                        <Rectangle
                            Width="50"
                            Fill="{ThemeResource ForegroundStatusCritical}"
                            ToolTipService.ToolTip="ForegroundStatusCritical" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>


            <!--  Buttons  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Buttons" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Standard" />
                    <Button Content="Standard (X)" IsEnabled="False" />
                    <Button Content="Accent" Style="{StaticResource AccentButtonStyle}" />
                    <Button
                        Content="Accent (X)"
                        IsEnabled="False"
                        Style="{StaticResource AccentButtonStyle}" />
                    <ToggleButton Content="Toggle Button" />
                    <ToggleButton Content="Toggle Button (X)" IsEnabled="False" />
                    <HyperlinkButton Content="Hyperlink Button" NavigateUri="https://example.com" />
                    <HyperlinkButton
                        Content="Hyperlink Button (X)"
                        IsEnabled="False"
                        NavigateUri="https://example.com" />
                </StackPanel>
            </StackPanel>


            <!--  Text Inputs  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Text Inputs" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Header="Standard TextBox"
                        PlaceholderText="Enter text..." />
                    <TextBox
                        Width="300"
                        HorizontalAlignment="Left"
                        Header="Standard TextBox (X)"
                        IsEnabled="False"
                        PlaceholderText="Enter text..." />
                </StackPanel>
                <PasswordBox
                    Width="300"
                    HorizontalAlignment="Left"
                    Header="PasswordBox" />
                <AutoSuggestBox
                    Width="300"
                    HorizontalAlignment="Left"
                    Header="AutoSuggestBox"
                    PlaceholderText="Type here..." />
                <NumberBox
                    Width="150"
                    HorizontalAlignment="Left"
                    Header="NumberBox"
                    SpinButtonPlacementMode="Compact"
                    Value="42" />
                <RichEditBox
                    Width="300"
                    Height="120"
                    HorizontalAlignment="Left"
                    Header="RichEditBox" />
            </StackPanel>


            <!--  Sliders & Progress  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Sliders &amp; Progress" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Slider
                        Width="300"
                        HorizontalAlignment="Left"
                        Maximum="100"
                        Minimum="0"
                        TickFrequency="10"
                        TickPlacement="Outside"
                        Value="60" />
                    <Slider
                        Width="300"
                        HorizontalAlignment="Left"
                        IsEnabled="False"
                        Maximum="100"
                        Minimum="0"
                        TickFrequency="10"
                        TickPlacement="Outside"
                        Value="60" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ProgressBar
                        Width="200"
                        HorizontalAlignment="Left"
                        IsIndeterminate="True"
                        Maximum="100"
                        Minimum="0"
                        Value="40" />
                    <ProgressBar
                        Width="200"
                        HorizontalAlignment="Left"
                        Maximum="100"
                        Minimum="0"
                        ShowPaused="True"
                        Value="40" />
                    <ProgressBar
                        Width="200"
                        HorizontalAlignment="Left"
                        Maximum="100"
                        Minimum="0"
                        ShowError="True"
                        Value="40" />
                </StackPanel>
                <ProgressRing
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Left"
                    IsActive="True" />
            </StackPanel>


            <!--  Checkboxes & Radios  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Checkboxes &amp; RadioButtons" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox Content="CheckBox" />
                    <CheckBox Content="CheckBox (X)" IsEnabled="False" />
                    <CheckBox
                        Content="CheckBox (X)"
                        IsChecked="True"
                        IsEnabled="False" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <RadioButton Content="Option" />
                    <RadioButton Content="Option (X)" IsEnabled="False" />
                    <RadioButton
                        Content="Option (X)"
                        IsChecked="True"
                        IsEnabled="False" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ToggleSwitch />
                    <ToggleSwitch IsEnabled="False" />
                    <ToggleSwitch IsEnabled="False" IsOn="True" />
                </StackPanel>
            </StackPanel>


            <!--  ComboBox & Menu  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="ComboBox &amp; Menu" />
                <ComboBox Width="250">
                    <ComboBoxItem Content="Item 1" />
                    <ComboBoxItem Content="Item 2" />
                    <ComboBoxItem Content="Item 3" />
                </ComboBox>
                <MenuBar>
                    <MenuBarItem Title="File">
                        <MenuFlyoutItem Text="New" />
                        <MenuFlyoutItem Text="Open" />
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Exit" />
                    </MenuBarItem>
                    <MenuBarItem Title="Edit">
                        <MenuFlyoutItem Text="Copy" />
                        <MenuFlyoutItem Text="Paste" />
                    </MenuBarItem>
                </MenuBar>
            </StackPanel>


            <!--  Lists  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Lists" />
                <ListView
                    Width="300"
                    Height="150"
                    HorizontalAlignment="Left">
                    <ListViewItem Content="List Item 1" />
                    <ListViewItem Content="List Item 2" />
                    <ListViewItem Content="List Item 3" />
                </ListView>
                <GridView
                    Width="300"
                    Height="150"
                    HorizontalAlignment="Left">
                    <GridViewItem Content="Grid Item A" />
                    <GridViewItem Content="Grid Item B" />
                    <GridViewItem Content="Grid Item C" />
                </GridView>
            </StackPanel>


            <!--  Misc Controls  -->
            <StackPanel Spacing="8">
                <TextBlock FontSize="20" Text="Misc Controls" />
                <CalendarDatePicker />
                <TimePicker />
                <ColorPicker HorizontalAlignment="Left" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
